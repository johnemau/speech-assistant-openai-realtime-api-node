{
    "extends": "@tsconfig/node24/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": false,
        "noImplicitAny": false,
        "useUnknownInCatchVariables": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "types": ["node"]
    },
    "include": ["index.js", "scripts", "src", "tests", "tools"]
}
