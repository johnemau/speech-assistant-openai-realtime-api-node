{
    "extends": "@tsconfig/node24/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "types": ["node"]
    },
    "include": ["eslint.config.js", "index.js", "scripts", "src", "tests"]
}
