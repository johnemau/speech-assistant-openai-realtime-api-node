{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "types": ["node"]
  },
  "include": ["index.js", "scripts", "src", "tests", "tools"]
}
